<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">




            <TextView
                android:id="@+id/opentasksTextView"
                style="@style/TextviewTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:fontFamily="casual"
                android:paddingStart="15dp"
                android:text="Open Tasks"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:textStyle="bold" />


        <ListView
            android:id="@+id/otasksListView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="left"
            android:dividerHeight="3dp"
            android:textAlignment="gravity"
            />

        <Button
            android:id="@+id/closedTaskBtn"
            style="@style/ButtonTheme"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:text="@string/show_me_tasks"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/clearTasksBtn"
            style="@style/ButtonTheme"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:text="Clear all"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_delete_32"
            android:drawablePadding="10dp"

            />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
