<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/detailsoftheactivity"
            style="@style/TextviewTheme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:fontFamily="casual"
            android:paddingStart="15dp"
            android:text="Details of the activity"
            android:textAlignment="textStart"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:text="Activity"
            android:textColor="@color/default_Button_Background" />

        <TextView
            android:id="@+id/activitynameTextView"
            style="@style/TextviewTheme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/default_EditText_Background"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:textColor="@color/default_white" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:text="Description"
            android:textColor="@color/default_Button_Background" />


        <TextView
            android:id="@+id/activitydescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/default_EditText_Background"
            android:drawablePadding="10dp"
            android:fontFamily="casual"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:textColor="@color/default_white"
            android:textSize="12sp"
            android:textStyle="bold" />


    </LinearLayout>







</android.support.constraint.ConstraintLayout>