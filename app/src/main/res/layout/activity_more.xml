<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/more"
            style="@style/TextviewTheme"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:fontFamily="casual"
            android:text="More"
            android:textAlignment="textStart"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingStart="15dp"
            />


        <Button
            android:layout_height="wrap_content"
            style="@style/ButtonTheme"
            android:text="Settings"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/settingsBtn"

            android:drawableStart="@drawable/ic_settings_black_32dp"

            />

        <Button
            android:layout_height="wrap_content"
            style="@style/ButtonTheme"
            android:text="Notifications"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/notificationsBtn"

            android:drawableStart="@drawable/ic_notifications_white_32dp"

            />

        <Button
            android:layout_height="wrap_content"
            style="@style/ButtonTheme"
            android:text="Help"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/helpBtn"

            android:drawableStart="@drawable/ic_help_white_32dp"

            />

        <Button
            android:layout_height="wrap_content"
            style="@style/ButtonTheme"
            android:text="Logout"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:id="@+id/logoutBtn"

            android:drawableStart="@drawable/ic_exit_to_app_white_32dp"
            />

    </LinearLayout>







    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/default_Button_Background"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />



</android.support.constraint.ConstraintLayout>