<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/createTaskTextView"
        style="@style/TextviewTheme"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="start"
        android:fontFamily="casual"
        android:text="Create Task"
        android:textAlignment="textStart"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background1"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <Spinner
                android:id="@+id/activitySpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:autofillHints=""
                android:clickable="true"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_help_outline_black_24dp"
                android:drawableLeft="@drawable/ic_help_outline_black_24dp"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="What ?"
                android:inputType="textPersonName"
                tools:targetApi="o" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <Spinner
                android:id="@+id/personSpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:autofillHints=""
                android:clickable="true"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_help_outline_black_24dp"
                android:drawableLeft="@drawable/ic_help_outline_black_24dp"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="What ?"
                android:inputType="textPersonName"
                tools:targetApi="o" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/default_EditText_Background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:src="@drawable/ic_date_range_32dp" />

            <TextView
                android:id="@+id/dateEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:ems="10"
                android:fontFamily="casual"
                android:padding="16dp"
                android:text="Date"
                android:textColor="@color/blacki"
                android:textSize="20sp" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <Spinner
                android:id="@+id/repeatSpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:autofillHints=""
                android:clickable="true"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_help_outline_black_24dp"
                android:drawableLeft="@drawable/ic_help_outline_black_24dp"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="What ?"
                android:inputType="textPersonName"
                tools:targetApi="o" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <Spinner
                android:id="@+id/taskpointsSpinner"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:autofillHints=""
                android:clickable="true"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_help_outline_black_24dp"
                android:drawableLeft="@drawable/ic_help_outline_black_24dp"
                android:drawablePadding="10dp"

                android:ems="10"
                android:hint="What ?"
                android:inputType="textPersonName"
                tools:targetApi="o" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/createTaskBtn"
            style="@style/ButtonTheme"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:text="Create Task"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />


    </LinearLayout>

</LinearLayout>